<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.mapper.UserMapper">

    <resultMap id="BaseResultMap" type="com.example.demo.dao.User">
        <result column="id" jdbcType="INTEGER" property="userId" />
        <result column="name" jdbcType="VARCHAR" property="userName" />
        <result column="account" jdbcType="VARCHAR" property="userAccount" />
        <result column="password" jdbcType="VARCHAR" property="userPassword" />
    </resultMap>

    <select id="getUserList" resultMap="BaseResultMap">
        select * from user;
    </select>

    <select id="getUser" resultMap="BaseResultMap">
        SELECT *FROM user WHERE account=#{userAccount}
    </select>

    <insert id="regist">
        INSERT INTO user(name,account,password) VALUES (#{userName},#{userAccount},#{userPassword})
    </insert>
    <select id="findAccount" resultMap="BaseResultMap">
        SELECT *FROM user WHERE account=#{userAccount}
    </select>

    <delete id="delete">
        DELETE FROM user WHERE account=#{userAccount}
    </delete>
    <select id="findAccount2" resultMap="BaseResultMap">
        SELECT *FROM user WHERE account=#{userAccount} AND password=#{userPassword}
    </select>

</mapper>